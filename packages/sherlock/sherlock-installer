#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/sherlock-project/sherlock ${HOME}/.local/share/sherlock
[[ -d ${HOME}/.local/share/sherlock ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/sherlock;
  cd ${HOME}/.local/share/sherlock;
	echo "beautifulsoup\nbs\nlxml\nsoupsieve\n" >> requirements.txt;
	python -m pip --no-color --quiet --no-cache-dir install -r requirements.txt;
} || {
  echo -en "\e[31mE:\e[0m sherlock directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
