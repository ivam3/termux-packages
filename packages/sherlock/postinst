#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/sherlock-project/sherlock ${HOME}/.local/share/sherlock
[[ -d ${HOME}/.local/share/sherlock ]] && {
  echo "Installing requirements ..."
  chmod 751 -R ${HOME}/.local/share/sherlock
	python -m pip --no-color --no-cache-dir install Cython
  export MATHLIB="m"
	python -m pip --no-color --no-cache-dir install -r ${HOME}/.local/share/sherlock/requirements.txt
} || {
  echo -en "\e[31mE:\e[0m sherlock directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
wget --tries=20 --quiet https://raw.githubusercontent.com/ivam3/i-Haklab/master/.deb/home/.local/bin/fixer -O /data/data/com.termux/files/usr/bin/fixer
chmod 750 /data/data/com.termux/files/usr/bin/fixer
echo "[*] Sherlock installation finished."
echo "[*] Run 'sherlock' to execute it."
echo "[*] Run 'fixer' to fix any posible issue."
echo "[!] For help going to https://t.me/Ivam3_Bot."
echo "[*] @Ivam3: thank you for use my package."
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
