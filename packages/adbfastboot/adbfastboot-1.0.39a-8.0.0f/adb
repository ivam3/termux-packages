#!/data/data/com.termux/files/usr/bin/bash
[[ -d ${HOME}/.local/share/adbfastboot ]] || { mkdir -p ${HOME}/.local/share/adbfastboot;}
export HOME=/data/data/com.termux/files/home/.local/share/adbfastboot
export TMPDIR=/data/data/com.termux/files/usr/tmp

case "$(basename $0)" in
  adb) bin=adb.bin;;
  fastboot) bin=fastboot.bin;;
  fastboot-armeabi) bin=fastboot-armeabi.bin;;
esac
[[ -e $(dirname "$0")/$bin ]] >/dev/null || { echo -en "\e[31mE:\e[0m Binary file missing.";exit 0;}
$(command -v $bin) "$@"
