#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'

[[ -d ${HOME}/.local/share/adbfastboot ]] || {
  mkdir -p /data/data/com.termux/files/home/.local/share/adbfastboot
}
export ADBDIR=/data/data/com.termux/files/home/.local/share/adbfastboot
export TMPDIR=/data/data/com.termux/files/usr/tmp
export ADB_SERVER_SOCKET=localfilesystem:$ADBDIR/adb_socket
export ANDROID_NO_USE_FWMARK_CLIENT=1

case "$(basename $0)" in
  adb) bin=adb.bin;;
  fastboot) bin=fastboot.bin;;
esac
[[ -e $(dirname "$0")/$bin ]] >/dev/null || { echo -en "\e[31mE:\e[0m Binary file missing.";exit 0;}
$(command -v fakeroot) $bin "$@"
