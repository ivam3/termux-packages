#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
export GO111MODULE=on
go install -v github.com/OWASP/Amass/v3/...@master
chmod 751 -R ${HOME}/go
goa=$(find ${HOME}/go/pkg/mod/github.com -type d -iname "!amass"|head -n 1)
[[ -d $goa/$(ls $goa) ]] && {
  ln -s $goa/$(ls $goa) $PREFIX/lib/go/src/amass;
} || {
  echo -en "\e[31mE:\e[0m amass directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
