#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/radioactivetobi/geo-recon ${HOME}/.local/share/geo-recon
[[ -d ${HOME}/.local/share/geo-recon ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/geo-recon;
  python -m pip --no-color --quiet --no-cache-dir install -r ${HOME}/.local/share/geo-recon/requirements.txt;
} || {
  echo -en "\e[31mE:\e[0m geo-recon directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
