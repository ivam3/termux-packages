#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/fuzzdb-project/fuzzdb --depth 1 ${HOME}/.local/share/fuzzdb
chmod 750 -R ${HOME}/.local/share/fuzzdb
ln -s ${HOME}/.local/share/wordlist/fuzzdb/big.txt ${HOME}/.local/share/fuzzdb/wordlists-user-passwd/big.txt
ln -s ${HOME}/.local/share/wordlist/fuzzdb/common.txt ${HOME}/.local/share/fuzzdb/wordlists-misc/common.txt
echo "Installing wfuzz ..."
python -m pip --no-color --quiet --no-cache-dir install wfuzz
exit 0
