#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/shekyan/slowhttptest ${HOME}/.local/share/slowhttptest
[[ -d ${HOME}/.local/share/slowhttptest ]] && {
  echo "Compiling ...";
  chmod 751 -R ${HOME}/.local/share/slowhttptest;
  cd ${HOME}/.local/share/slowhttptest;
  ./configure;
  make;
  if [[ -e ${HOME}/.local/share/slowhttptest/src/slowhttptest ]]
  then
    cp ${HOME}/.local/share/slowhttptest/src/slowhttptest $HOME/.local/bin
  else
    echo -en "\e[31mE:\e[0m Compilation failed!"
    exit 1
  fi;
} || {
  echo -en "\e[31mE:\e[0m slowhttptest directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
