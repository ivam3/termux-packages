#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/Fenrir-00/investigar-web ${HOME}/.local/share/webscan
[[ -d ${HOME}/.local/share/webscan ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/webscan;
  python -m pip --no-color --quiet --no-cache-dir install requests lolpython
} || {
  echo -en "\e[31mE:\e[0m webscan directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
