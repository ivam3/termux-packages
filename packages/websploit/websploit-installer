#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/f4rih/websploit ${HOME}/.local/share/websploit && cd $_
[[ -d ${HOME}/.local/share/websploit ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/websploit;
  python setup.py install
  python -m pip --no-color --quiet --no-cache-dir install -r requirements.txt;
} || {
  echo -en "\e[31mE:\e[0m websploit directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
