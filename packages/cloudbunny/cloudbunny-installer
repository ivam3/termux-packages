#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/Warflop/CloudBunny ${HOME}/.local/share/cloudbunny
[[ -d ${HOME}/.local/share/cloudbunny ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/cloudbunny;
  cd ${HOME}/.local/share/cloudbunny;
  echo "certificates" >> requirements.txt
  python2 -m pip --no-color --quiet --no-cache-dir install -r requirements.txt;
} || {
  echo -en "\e[31mE:\e[0m cloudbunny directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
