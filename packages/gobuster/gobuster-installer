#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
go install github.com/OJ/gobuster/v3@latest
gob=$(find ${HOME}/go/pkg/mod/github.com -iname gobuster)
[[ -d $gob/$(ls $gob) ]] && {
	chmod 751 -R ${HOME}/go
	ln -s $gob/$(ls $gob) $PREFIX/lib/go/src/gobuster;
	cd $gob/$(ls $gob);
	go get;
	go build;
	go install;
} || {
  echo -en "\e[31mE:\e[0m gobuster directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
