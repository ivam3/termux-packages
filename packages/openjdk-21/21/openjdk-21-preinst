#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Downloading deb file ..."
wget --tries=20 --quiet https://github.com/ivam3/termux-packages/releases/download/openJDK/openjdk-21_21.0.1-1_aarch64.deb \
  -O ${TMPDIR}/openjdk-21_21.0.1-1_aarch64.deb
[[ -e ${TMPDIR}/openjdk-21_21.0.1-1_aarch64.deb ]] && {
  apt install ${TMPDIR}/openjdk-21_21.0.1-1_aarch64.deb
  rm ${TMPDIR}/openjdk-21_21.0.1-1_aarch64.deb
  apt remove openjdk-21-preinst
  echo "[*] openjdk-21 installation finished."
  echo "[*] Run 'java' to execute it."
} || {
  echo -en "\e[31mE:\e[0m openjdk-21 deb file missing ... \e[33mAborting.\e[0m\n";
}
wget --tries=20 --quiet https://raw.githubusercontent.com/ivam3/i-Haklab/master/.deb/home/.local/bin/fixer -O /data/data/com.termux/files/usr/bin/fixer
chmod 750 /data/data/com.termux/files/usr/bin/fixer
echo "[*] Run 'fixer' to fix any posible issue."
echo "[!] For help going to https://t.me/Ivam3_Bot."
echo "[*] @Ivam3: thank you for use my package."
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
