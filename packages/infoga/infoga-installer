#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/m4ll0k/infoga ${HOME}/.local/share/infoga
chmod 750 -R ${HOME}/.local/share/infoga
echo "Installing requirements ..."
cd ${HOME}/.local/share/infoga
python -m pip --no-color --quiet --no-cache-dir install -r requirements.txt
exit 0
