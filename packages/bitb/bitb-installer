#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/surya-dev-singh/BITB-framwork ${HOME}/.local/share/bitb
[[ -d ${HOME}/.local/share/bitb ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/bitb;
  wget --tries=20 --quiet https://raw.githubusercontent.com/ivam3/termux-packages/gh-pages/packages/bitb/style2.css \
    -O ${HOME}/.local/share/bitb/style2.css;
  python -m pip --no-color --quiet --no-cache-dir install -r ${HOME}/.local/share/bitb/requirements.txt; 
} || {
  echo -en "\e[31mE:\e[0m bitb directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
