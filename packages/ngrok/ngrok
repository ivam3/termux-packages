#!/data/data/com.termux/files/usr/bin/bash
# THIS SCRIPT EXECUTE NGROK TO AVOID 'bad address' ERROR
# COLORS
W="\e[0m"
R="\e[31m"
G="\e[32m"
Y="\e[33m"
B="\e[34m"

[[ -e $PREFIX/bin/termux-chroot ]] || {
	yes|apt install proot >/dev/null 2>/dev/null;
}

if [[ -e ${HOME}/.local/share/ngrok ]]
then
	exec termux-chroot ${HOME}/.local/share/ngrok ${@:1}
else
  echo -en $R"E:$W Ngrok PATH missing ...$Y Aborting.$W"
  exit 1
fi

