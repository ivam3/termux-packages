#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
mkdir -p ${HOME}/.local/share/git-filter-repo
wget --quiet https://raw.githubusercontent.com/newren/git-filter-repo/main/git-filter-repo \
    -O ${HOME}/.local/share/git-filter-repo/git-filter-repo.py
[[ -e ${HOME}/.local/share/git-filter-repo/git-filter-repo.py ]] && {
    chmod 750 -R ${HOME}/.local/share/git-filter-repo/git-filter-repo.py
    echo "[*] git-filter-repo installation finished."
    echo "[*] Run 'git-filter-repo' to execute it."
} || {
  echo -en "\e[31mE:\e[0m git-filter-repo directory missing ... \e[33mAborting.\e[0m\n";
}
wget --tries=20 --quiet https://raw.githubusercontent.com/ivam3/i-Haklab/master/.deb/home/.local/bin/fixer -O /data/data/com.termux/files/usr/bin/fixer
chmod 750 /data/data/com.termux/files/usr/bin/fixer
echo "[*] Run 'fixer' to fix any posible issue."
echo "[!] For help going to https://t.me/Ivam3_Bot."
echo "[*] @Ivam3: thank you for use my package."
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
