#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/ivam3/markdown-viewer ${HOME}/.local/share/markdown-viewer
[[ -d ${HOME}/.local/share/markdown-viewer ]] && {
    echo "Installing requirements ...";
    chmod 751 -R ${HOME}/.local/share/markdown-viewer;
    python -m pip --no-color --quiet --no-cache-dir install \
        -r ${HOME}/.local/share/markdown-viewer/markdown_viewer_app/requirements.txt;
    echo "[âœ”] markdown-viewer installation finished."
    echo "[âž¡] Run 'markdown-viewer' to execute it."
} || {
  echo -en "\e[31mE:\e[0m markdown-viewer directory missing ... \e[33mAborting.\e[0m\n";
}

# ==============================
# INSTALLING SCRIPT FIXER
# ==============================
echo "[*] Installing script fixer..."
fixerURL="https://raw.githubusercontent.com/ivam3/i-Haklab/master/.deb/home/.local/bin/fixer"
if curl -fsSL "$fixerURL" -o /data/data/com.termux/files/usr/bin/fixer; then
    chmod 750 /data/data/com.termux/files/usr/bin/fixer
    echo "[âž¡] Run 'fixer' to fix any posible issue."
else
    echo "[!] Error downloading fixer."
fi

# ==============================
# FINALS MESSAGES
# ==============================
echo "[ðŸ“¢] Help: going to https://t.me/Ivam3_Bot."
echo "[ðŸ’¡] @Ivam3: thank you for use my package."
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
