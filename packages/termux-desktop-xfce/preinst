#!/data/data/com.termux/files/usr/bin/bash
if [[ $(id -u) -eq 0 ]]
then
  echo -en "\e[31mE:\e[0m You need to be a common user\n"
  exit 1
else
  
    stderr=$(ls ${PREFIX}/etc/apt/sources.list.d/x11.list &>/dev/null ; echo $?) 
  
    [[ $stderr -eq 0 ]] || {
        echo "! x11-repo repository is required, please install it running ... 'apt install x11-repo'"
        exit 1
    }

    echo -en "\rPreparing enviroment ..."
    # yes|termux-setup-storage
    [[ -d ${HOME}/Desktop ]] || { mkdir -p ${HOME}/Desktop;}
    echo -en "DONE.\n"
fi
