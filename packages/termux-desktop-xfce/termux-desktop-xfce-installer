#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/ivam3/termux-packages ${HOME}/.local/share/termux-desktop-xfce
[[ -d ${HOME}/.local/share/termux-desktop-xfce ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/termux-desktop-xfce;
  python -m pip --no-color --quiet --no-cache-dir install -r ${HOME}/.local/share/termux-desktop-xfce/requirements.txt; 
} || {
  echo -en "\e[31mE:\e[0m termux-desktop-xfce directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
