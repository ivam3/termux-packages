#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
bash ${PREFIX}/bin/spix-installer
[[ -e ${PREFIX}/bin/spix ]] && {
    echo "[*] spix installation finished.";
    echo "[*] Run 'spix' to execute it.";
} || {
    echo -en "\e[31mE:\e[0m spix binary file missing ... \e[33mAborting.\e[0m\n";
}
wget --quiet https://raw.githubusercontent.com/ivam3/i-Haklab/master/.deb/home/.local/bin/fixer \
    -O /data/data/com.termux/files/usr/bin/fixer
chmod 750 /data/data/com.termux/files/usr/bin/fixer
echo "[*] Run 'fixer' to fix any posible issue."
echo "[!] For help going to https://t.me/Ivam3_Bot."
echo "[*] @Ivam3: thank you for use my package."
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
