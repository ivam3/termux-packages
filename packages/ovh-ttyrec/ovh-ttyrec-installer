#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet --depth=1 https://github.com/ovh/ovh-ttyrec ${HOME}/.local/share/ovh-ttyrec && cd $_
[[ -d ${HOME}/.local/share/ovh-ttyrec ]] && {
  chmod 751 -R ${HOME}/.local/share/ovh-ttyrec;
  ./configure --prefix=${PREFIX} && make && make install;
} || {
  echo -en "\e[31mE:\e[0m ovh-ttyrec directory missing ... \e[33mAborting.\e[0m\n";
}
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
