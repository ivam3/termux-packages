#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/Ekultek/Pybelt.git ${HOME}/.local/share/pybelt
[[ -d ${HOME}/.local/share/pybelt ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/pybelt;
  cd ${HOME}/.local/share/pybelt;
  python2 -m pip --no-color --quiet --no-cache-dir install -r requirements.txt;
} || {
  echo -en "\e[31mE:\e[0m pybelt directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
