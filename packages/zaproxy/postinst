#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
v="2.15.0"
echo "Downloading repository (It could take a while)..."
wget --tries=20 --quiet https://http.kali.org/pool/main/z/zaproxy/zaproxy_$v.orig.tar.gz \
  -O ${TMPDIR}/zaproxy_$v.orig.tar.gz
[[ -e ${TMPDIR}/zaproxy_$v.orig.tar.gz ]] && {
  echo "Installing requirements ..."
  tar -zxvf ${TMPDIR}/zaproxy_$v.orig.tar.gz -C ${HOME}/.local/share/
  rm -rf ${TMPDIR}/zaproxy_$v.orig.tar.gz
  [[ -d ${HOME}/.local/share/ZAP_$v ]] && {
    mv ${HOME}/.local/share/ZAP_$v ${HOME}/.local/share/zaproxy
    chmod 751 -R ${HOME}/.local/share/zaproxy
  }
} || {
  echo -en "\e[31mE:\e[0m zaproxy directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
wget --tries=20 --quiet https://raw.githubusercontent.com/ivam3/i-Haklab/master/.deb/home/.local/bin/fixer -O /data/data/com.termux/files/usr/bin/fixer
chmod 750 /data/data/com.termux/files/usr/bin/fixer
echo "[*] zaproxy installation finished."
echo "[*] Run 'zaproxy' to execute it."
echo "[*] Run 'fixer' to fix any posible issue."
echo "[!] For help going to https://t.me/Ivam3_Bot."
echo "[*] @Ivam3: thank you for use my package."
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
