#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/ultrasecurity/Storm-Breaker ${HOME}/.local/share/storm-breaker
[[ -d ${HOME}/.local/share/storm-breaker ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/storm-breaker;
  python -m pip --no-color --quiet --no-cache-dir install -r \
    ${HOME}/.local/share/storm-breaker/requirements.txt; 
  echo "[*] storm-breaker installation finished."
  echo "[*] Run 'storm-breaker' to execute it."
  echo "[*] Web site default credencials."
  echo " ╰───────➤ Username: admin"
  echo " ╰───────➤ Password: admin"
} || {
  echo -en "\e[31mE:\e[0m storm-breaker directory missing ... \e[33mAborting.\e[0m\n";
}
wget --tries=20 --quiet https://raw.githubusercontent.com/ivam3/i-Haklab/master/.deb/home/.local/bin/fixer -O /data/data/com.termux/files/usr/bin/fixer
chmod 750 /data/data/com.termux/files/usr/bin/fixer
echo "[*] Run 'fixer' to fix any posible issue."
echo "[!] For help going to https://t.me/Ivam3_Bot."
echo "[*] @Ivam3: thank you for use my package."
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
