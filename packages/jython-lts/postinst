#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
jv="2.7.3"
lv="7.2.0"
echo "Downloading jar files (It could take a while) ..."
wget -q --tries=20 https://repo1.maven.org/maven2/org/python/jython-standalone/$jv/jython-standalone-$jv.jar \
	-O ${HOME}/.local/share/jython.jar
[[ -e ${HOME}/.local/share/jython.jar ]] && {
  echo "Installing requirements ..."
  chmod 751 ${HOME}/.local/share/jython.jar
  [[ ! -e $PREFIX/opt/openjdk/lib/libgif.so.7 ]] && [[ -e $PRERIX/lib/libgif.so.$lv ]] && {
    ln -s $PRERIX/lib/libgif.so.$lv $PREFIX/opt/openjdk/lib/libgif.so.7;
  }
} || {
  echo -en "\e[31mE:\e[0m jython jar file missing ... \e[33mAborting.\e[0m\n"
  exit 1
}
wget --tries=20 --quiet https://raw.githubusercontent.com/ivam3/i-Haklab/master/.deb/home/.local/bin/fixer -O /data/data/com.termux/files/usr/bin/fixer
chmod 750 /data/data/com.termux/files/usr/bin/fixer
echo "[*] jython installation finished."
echo "[*] Run 'jython' to execute it."
echo "[*] Run 'fixer' to fix any posible issue."
echo "[!] For help going to https://t.me/Ivam3_Bot."
echo "[*] @Ivam3: thank you for use my package."
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
