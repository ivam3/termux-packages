#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/urbanadventurer/WhatWeb ${HOME}/.local/share/whatweb
[[ -d ${HOME}/.local/share/whatweb ]] && {
  echo "Installing ruby gems ...";
  chmod 751 -R ${HOME}/.local/share/whatweb;
  gem install --no-document --verbose rubygems-update;
  update_rubygems;
  gem install --no-document --verbose bundler;
  bundle install -j$(nproc --all) --verbose;
  bundle update --bundler;
} || {
  echo -en "\e[31mE:\e[0m whatweb directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
