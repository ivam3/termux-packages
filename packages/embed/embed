#!/data/data/com.termux/files/usr/bin/bash

if [[ -d ${HOME}/.local/share/$(basename $0) ]]
then
	pushd ${HOME}/.local/share/$(basename $0) >/dev/null
	$(command -v ruby) $(basename $0).rb ${@:1}
else
	echo -en "\e[31m(_âž¤) ERROR :\e[0m $(basename $0) PATH missing ...\e[33m Aborting.\e[0m"
	exit 1
fi
