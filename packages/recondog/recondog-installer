#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/s0md3v/ReconDog ${HOME}/.local/share/recondog
[[ -d ${HOME}/.local/share/recondog ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/recondog;
  cd ${HOME}/.local/share/recondog;
  python -m pip --no-color --quiet --no-cache-dir install -r requirements.txt;
} || {
  echo -en "\e[31mE:\e[0m recondog directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
