#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Downloading ghidra ..."
wget --tries=20 --quiet \
  https://github.com/NationalSecurityAgency/ghidra/releases/download/Ghidra_10.1.5_build/ghidra_10.1.5_PUBLIC_20220726.zip \
  -O ${TMPDIR}/ghidra.zip
[[ -e ${TMPDIR}/ghidra.zip ]] && {
	echo "Installing ghidra (It could take a while) ..."
	unzip -q ${TMPDIR}/ghidra.zip -d ${HOME}/.local/share;
	mv ${HOME}/.local/share/ghidra_10.1.4_PUBLIC/ ${HOME}/.local/share/ghidra;
	chmod 751 -R ${HOME}/.local/share/ghidra;
} || {
  echo -en "\e[31mE:\e[0m ghidra directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
