#!/data/data/com.termux/files/usr/bin/bash
if [[ $(id -u) -eq 0 ]]
then
  echo -en "\e[31mE:\e[0m You need to be a common user\n"
  exit 1
else
  echo "Preparing enviroment ..."
  if [[ -d ${HOME}/.local/share/ghidra ]]
  then
    rm -rf ${HOME}/.local/share/ghidra
  else
    mkdir -p ${HOME}/.local/share 2>/dev/null
  fi
	echo "Setting Yisus7u7 repositories at Advance Package Tool(APT)."
	mkdir -p ${PREFIX}/etc/apt/sources.list.d 2>/dev/null
	wget --tries=20 --quiet "https://raw.githubusercontent.com/Yisus7u7/termux-desktop-xfce/gh-pages/termux-desktop-xfce.list" -O ${PREFIX}/etc/apt/sources.list.d/termux-desktop-xfce.list
fi
