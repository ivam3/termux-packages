#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/lightos/credmap ${HOME}/.local/share/credmap
[[ -d ${HOME}/.local/share/credmap ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/credmap;
  cd ${HOME}/.local/share/credmap;
  python2 -m pip --no-color --quiet --no-cache-dir install urllib2
} || {
  echo -en "\e[31mE:\e[0m credmap directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
