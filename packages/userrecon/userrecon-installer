#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/issamelferkh/userrecon ${HOME}/.local/share/userrecon
[[ -d ${HOME}/.local/share/userrecon ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/userrecon;
} || {
  echo -en "\e[31mE:\e[0m userrecon directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
