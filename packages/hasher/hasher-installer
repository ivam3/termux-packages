#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/CiKu370/hasher ${HOME}/.local/share/hasher
[[ -d ${HOME}/.local/share/hasher ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/hasher;
  python2 -m pip --no-color --quiet --no-cache-dir install progressbar passlib;
} || {
  echo -en "\e[31mE:\e[0m hasher directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
