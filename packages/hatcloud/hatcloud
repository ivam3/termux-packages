#!/data/data/com.termux/files/usr/bin/bash
# COLORS
W="\e[0m"
R="\e[31m"
G="\e[32m"
Y="\e[33m"
B="\e[34m"
if [[ -d ${HOME}/.local/share/hatcloud ]]
then
  cd ${HOME}/.local/share/$(basename $0) >/dev/null
  $(command -v ruby) $(basename $0).rb ${@:1}
else
  echo -en $R"E:$W $(basename $0) PATH missing ...$Y Aborting.$W"
  exit 1
fi
