#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/HatBashBR/HatCloud ${HOME}/.local/share/hatcloud
[[ -d ${HOME}/.local/share/hatcloud ]] && {
  echo "Installing ruby gems ...";
  chmod 751 -R ${HOME}/.local/share/hatcloud;
  gem install --no-document --verbose rubygems-update;
  update_rubygems;
} || {
  echo -en "\e[31mE:\e[0m hatcloud directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
