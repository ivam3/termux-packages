#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/wpscanteam/wpscan ${HOME}/.local/share/wpscan
[[ -d ${HOME}/.local/share/wpscan ]] && {
  echo "Installing requirements ...";
  cd ${HOME}/.local/share/wpscan
  chmod 751 -R ${HOME}/.local/share/wpscan;
  gem install --no-document --verbose rubygems-update;
  update_rubygems;
  gem install --no-document --verbose bundler;
  bundle install -j$(nproc --all) --verbose;
  bundle update --bundler;
  gem install wpscan;
} || {
  echo -en "\e[31mE:\e[0m wpscan directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
