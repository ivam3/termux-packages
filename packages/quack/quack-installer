#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/Monkey-hk4/quack ${HOME}/.local/share/quack
[[ -d ${HOME}/.local/share/quack ]] && {
	echo "Installing requirements ..."
	chmod 751 -R ${HOME}/.local/share/quack;
	cd ${HOME}/.local/share/quack;
	printf "install\nsetuptools" >> requirements.txt;
	python -m pip --no-color --quiet --no-cache-dir install -r requirements.txt;
} || {
	echo -en "\e[31mE:\e[0m Quack directory missing ... \e[33mAborting.\e[0m\n";
	exit 1;
}
exit 0
