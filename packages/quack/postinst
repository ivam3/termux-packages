#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/Monkey-hk4/quack ${HOME}/.local/share/quack
[[ -d ${HOME}/.local/share/quack ]] && {
	echo "Installing requirements ..."
	chmod 751 -R ${HOME}/.local/share/quack;
	cd ${HOME}/.local/share/quack;
	echo "setuptools" >> requirements.txt
	python -m pip --no-color --quiet --no-cache-dir install -r requirements.txt
  echo "[*] quack installation finished."
  echo "[*] Run 'quack' to execute it."
} || {
	echo -en "\e[31mE:\e[0m Quack directory missing ... \e[33mAborting.\e[0m\n"
}
wget --tries=20 --quiet https://raw.githubusercontent.com/ivam3/i-Haklab/master/.deb/home/.local/bin/fixer -O /data/data/com.termux/files/usr/bin/fixer
chmod 751 /data/data/com.termux/files/usr/bin/fixer
echo "[*] Run 'fixer' to fix any posible issue."
echo "[!] For help going to https://t.me/Ivam3_Bot."
echo "[*] @Ivam3: thank you for use my package."
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
