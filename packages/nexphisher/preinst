#!/data/data/com.termux/files/usr/bin/bash
if [[ $(id -u) -eq 0 ]]
then
  echo -en "\e[31mE:\e[0m You need to be a common user"
  exit 1
elif [[ ! -e $(command -v ngrok) ]] 2>/dev/null
then
	echo -en "\e[31mE:\e[0m Ngrok needed ...\e[33m Aborting.\e[0m\n"
	exit 1
else
  echo "Preparing enviroment ..."
	[[ -d ${HOME}/.local/share/nexphisher ]] || {
		mkdir -p ${HOME}/.local/share/nexphisher;
	}
	[[ -d ${HOME}/.local/share/nexphisher/.htr ]] || {
		mkdir ${HOME}/.local/share/nexphisher/.htr;
	}
	[[ -d ${HOME}/.local/share/nexphisher/logs ]] || {
		mkdir ${HOME}/.local/share/nexphisher/logs;
	}
fi
