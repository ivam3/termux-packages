#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/aboul3la/Sublist3r ${HOME}/.local/share/sublist3r
[[ -d ${HOME}/.local/share/sublist3r ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/sublist3r;
  cd ${HOME}/.local/share/sublist3r;
	python -m pip --no-color --quiet --no-cache install --upgrade pip
	python -m pip --no-color --quiet --no-cache install -r requirements.txt
} || {
  echo -en "\e[31mE:\e[0m sublist3r directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
####::: REPORT ISSUES AT https://t.me/Ivam3_Bot :::####
