#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Cloning repository ..."
git clone --quiet https://github.com/thewhiteh4t/seeker ${HOME}/.local/share/seeker
[[ -d ${HOME}/.local/share/seeker ]] && {
  echo "Installing requirements ...";
  chmod 751 -R ${HOME}/.local/share/seeker;
  python -m pip --no-color --quiet --no-cache-dir install requests packaging;
} || {
  echo -en "\e[31mE:\e[0m seeker directory missing ... \e[33mAborting.\e[0m\n";
	exit 1;
}
exit 0
