#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'

pkgPATH=$(dirname $0)
rm $pkgPATH/../*.deb

declare -a pkg=$(find $pkgPATH -maxdepth 1 -type d|awk -F "/" '{print $NF}')

for i in ${pkg[*]}
do
	[[ ! -e $i/maniciest.json ]] && {
		echo "$i is not a package"
	} || {
		echo -en "Working with:\e[33m $i\e[0m\n"
		pushd $i
		termux-create-package manifiest.json
		mv *.deb ../../
		popd
	}
done
