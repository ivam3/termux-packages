#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Installing JAR file ..."
wget --quiet https://storage.googleapis.com/google-code-archive-downloads/v2/code.google.com/android4me/AXMLPrinter2.jar -O ${HOME}/.local/share/AXMLPrinter2.jar
[[ -e ${HOME}/.local/share/AXMLPrinter2.jar ]] && { 
    chmod 751 ${HOME}/.local/share/AXMLPrinter2.jar ${PREFIX}/bin/axmlprinter2 
    echo "[âœ”] AXMLPrinter2 installation finished."
    echo "[*] Run 'axmlprinter2' to execute it."
} || {
  echo -en "\e[31mE:\e[0m axmlprinter2.jar directory missing ... \e[33mAborting.\e[0m\n";
}

# ==============================
# INSTALLING SCRIPT FIXER
# ==============================
echo "[*] Installing script fixer..."
fixerURL="https://raw.githubusercontent.com/ivam3/i-Haklab/master/.deb/home/.local/bin/fixer"
if wget --quiet "$fixerURL" -O /data/data/com.termux/files/usr/bin/fixer; then
    chmod 750 /data/data/com.termux/files/usr/bin/fixer
else
    echo "[!] Error downloading fixer."
fi

