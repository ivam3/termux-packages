#!/data/data/com.termux/files/usr/bin/bash
IFS=$'\n\t'
echo "Downloading repository ..."
wget --tries=20 --quiet http://http.kali.org/pool/main/s/stegsnow/stegsnow_20130616.orig.tar.gz -O ${TMPDIR}/stegsnow.tar.gz
tar -xvzf ${TMPDIR}/stegsnow.tar.gz -C ${HOME}/.local/share
[[ -d ${HOME}/.local/share/snow-20130616 ]] && {
  echo "Compiling ..."
  mv ${HOME}/.local/share/snow-20130616 ${HOME}/.local/share/stegsnow;
  cd ${HOME}/.local/share/stegsnow;
  chmod 751 -R ${HOME}/.local/share/stegsnow;
  make;
  if [[ -e ${HOME}/.local/share/stegsnow/snow ]]
  then
    cp snow ${HOME}/.local/bin/snow
  else
    echo -en "\e[33mE:\e[0m Compilation failed!\n"
    exit 1
  fi;
} || {
  echo -en "\e[31mE:\e[0m stegsnow directory missing ... \e[33mAborting.\e[0m\n";
  exit 1;
}
exit 0
